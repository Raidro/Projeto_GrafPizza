<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:text="RESULTADO DE ELECOES"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="Digite a quantidade de votos de cada candidato:"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/edtVoto1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="Votos Candidato 1"
        android:inputType="numberSigned"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/edtVoto2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Votos Candidato 2"
        android:inputType="numberSigned"
        app:layout_constraintEnd_toEndOf="@+id/edtVoto1"
        app:layout_constraintStart_toStartOf="@+id/edtVoto1"
        app:layout_constraintTop_toBottomOf="@+id/edtVoto1" />

    <EditText
        android:id="@+id/edtVoto3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Votos Candidato 3"
        android:inputType="numberSigned"
        app:layout_constraintEnd_toEndOf="@+id/edtVoto2"
        app:layout_constraintStart_toStartOf="@+id/edtVoto2"
        app:layout_constraintTop_toBottomOf="@+id/edtVoto2" />

    <Button
        android:id="@+id/btnGrafico"
        android:layout_width="194dp"
        android:layout_height="44dp"
        android:layout_marginTop="32dp"
        android:text="Ver Grafico"
        app:layout_constraintEnd_toEndOf="@+id/edtVoto3"
        app:layout_constraintStart_toStartOf="@+id/edtVoto3"
        app:layout_constraintTop_toBottomOf="@+id/edtVoto3" />

</android.support.constraint.ConstraintLayout>